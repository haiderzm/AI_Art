                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/sl22"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:src="@drawable/style22"
                android:layout_margin="5dp"
                />
            <ImageView
                android:id="@+id/sl23"
                android:layout_height="100dp"
